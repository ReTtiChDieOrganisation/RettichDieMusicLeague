<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to groups_path, class: "text-soundcloud-orange hover:text-soundcloud-coral inline-flex items-center font-semibold transition-colors" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Groups
    <% end %>
  </div>

  <div class="glass-card p-8">
    <h1 class="text-4xl font-bold mb-8 text-white"><%= @group.name %></h1>

    <%# Current Season %>
    <% if @current_season %>
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4 text-white">Current Season</h2>
        <div class="glass-medium rounded-2xl p-6 border border-soundcloud-orange/20 hover:shadow-glow-orange transition-all duration-300">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-3xl font-bold gradient-orange bg-clip-text text-transparent">Season <%= @current_season.number %></p>
              <p class="text-sm text-gray-400 mt-2">Started <%= @current_season.start_date.strftime("%B %d, %Y") %></p>
            </div>
            <%= link_to "View Season →", group_season_path(@group, @current_season), 
                class: "btn-primary" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="mb-8 glass-medium rounded-2xl p-6">
        <p class="text-gray-400 mb-4 text-lg">No active season</p>
        <% if @membership&.admin? %>
          <%= link_to "Start New Season", new_group_season_path(@group), 
              class: "btn-primary inline-block" %>
        <% end %>
      </div>
    <% end %>

    <%# Members %>
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4 text-white">
        Members (<%= @members.count %>)
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <% @members.each do |member| %>
          <div class="glass-medium rounded-xl p-4 hover:border-soundcloud-orange/30 transition-colors">
            <p class="font-semibold text-white"><%= member.display_name %></p>
            <% if @group.memberships.find_by(user: member).admin? %>
              <span class="text-xs text-soundcloud-orange font-semibold">✨ Admin</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <%# Invite Link %>
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4 text-white">Invite Friends</h2>
      <div class="glass-medium rounded-2xl p-6">
        <p class="text-sm text-gray-400 mb-3">Share this link to invite new members:</p>
        <div class="flex items-center space-x-2">
          <input type="text" readonly value="<%= join_url(@group.invite_code) %>" 
                 class="flex-1 input-glass text-sm font-mono"
                 id="invite-link">
          <button onclick="copyInviteLink()" 
                  class="btn-primary whitespace-nowrap">
            Copy
          </button>
        </div>
      </div>
    </div>

    <%# Admin Actions %>
    <% if @membership&.admin? %>
      <div class="flex flex-wrap gap-4 pt-6 border-t border-white/10">
        <%= link_to "Edit Group", edit_group_path(@group), 
            class: "text-soundcloud-orange hover:text-soundcloud-coral font-semibold transition-colors" %>
        <%= link_to "All Seasons", group_seasons_path(@group), 
            class: "text-soundcloud-orange hover:text-soundcloud-coral font-semibold transition-colors" %>
        <%= button_to "Delete Group", group_path(@group), method: :delete, 
            data: { turbo_confirm: "Are you sure? This will delete all seasons, weeks, and submissions." },
            class: "text-red-400 hover:text-red-300 font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

<script>
function copyInviteLink() {
  const input = document.getElementById('invite-link');
  input.select();
  document.execCommand('copy');
  alert('Invite link copied to clipboard!');
}
</script>
