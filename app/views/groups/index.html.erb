<div class="max-w-6xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-4xl font-bold text-white">Your Groups</h1>
    <%= link_to new_group_path, class: "btn-primary" do %>
      + Create Group
    <% end %>
  </div>

  <% if @groups.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @groups.each do |group| %>
        <%= link_to group_path(group), class: "block group" do %>
          <div class="glass-card p-6 hover:shadow-glow-orange transition-all duration-300 transform hover:scale-105 hover:border-soundcloud-orange/30">
            <h3 class="text-2xl font-bold mb-4 text-white group-hover:text-soundcloud-orange transition-colors"><%= group.name %></h3>
            <div class="flex items-center justify-between text-sm text-gray-400">
              <span class="flex items-center">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
                <%= pluralize(group.members.count, "member") %>
              </span>
              <% if group.seasons.active.any? %>
                <span class="bg-gradient-to-r from-soundcloud-orange to-soundcloud-coral text-white px-3 py-1 rounded-full text-xs font-semibold shadow-glow-orange">
                  âœ¨ Active Season
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-20 glass-card">
      <div class="mb-6">
        <div class="inline-block p-4 rounded-full bg-soundcloud-orange/10 mb-4">
          <svg class="w-20 h-20 text-soundcloud-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
      </div>
      <h2 class="text-3xl font-bold mb-3 text-white">No groups yet</h2>
      <p class="text-gray-400 mb-8 text-lg">Create a group or join one with an invite code</p>
      <%= link_to new_group_path, class: "btn-primary" do %>
        Create Your First Group
      <% end %>
    </div>
  <% end %>
</div>
