<!DOCTYPE html>
<html class="dark">
  <head>
    <title><%= content_for(:title) || "B-Side Music Challenge" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="B-Side">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps %>
    <%= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%# Includes all JavaScript files in app/javascript %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="bg-charcoal-950 text-gray-100 min-h-screen pb-20 md:pb-0 gradient-mesh">
    <%# Flash messages %>
    <% if notice %>
      <div class="glass-dark px-4 py-3 mb-0 shadow-lg border-l-4 border-soundcloud-orange">
        <div class="container mx-auto flex items-center">
          <span class="text-soundcloud-orange mr-2">âœ“</span>
          <%= notice %>
        </div>
      </div>
    <% end %>
    <% if alert %>
      <div class="glass-dark px-4 py-3 mb-0 shadow-lg border-l-4 border-red-500">
        <div class="container mx-auto flex items-center">
          <span class="text-red-400 mr-2">âš </span>
          <%= alert %>
        </div>
      </div>
    <% end %>

    <%# Desktop Navigation %>
    <% if user_signed_in? %>
      <nav class="hidden md:block glass-medium sticky top-0 z-50 border-b border-white/10">
        <div class="container mx-auto px-4">
          <div class="flex items-center justify-between h-16">
            <div class="flex items-center space-x-8">
              <%= link_to root_path, class: "text-xl font-bold text-soundcloud-orange hover:text-soundcloud-coral transition-colors duration-200" do %>
                <span class="text-2xl">ðŸŽµ</span> B-Side
              <% end %>
              <%= link_to "Groups", groups_path, class: "text-gray-300 hover:text-soundcloud-orange transition-colors duration-200 font-medium" %>
            </div>
            <div class="flex items-center space-x-4">
              <span class="text-gray-400">
                <%= current_user.display_name %>
              </span>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, 
                  class: "text-gray-300 hover:text-soundcloud-orange transition-colors duration-200" %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <%# Main Content %>
    <main class="container mx-auto px-4 py-6">
      <%= yield %>
    </main>

    <%# Mobile Bottom Navigation %>
    <% if user_signed_in? %>
      <nav class="md:hidden fixed bottom-0 left-0 right-0 glass-strong border-t border-white/10 shadow-glass z-50">
        <div class="flex justify-around items-center h-16">
          <%= link_to root_path, class: mobile_nav_classes(root_path) do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            <span class="text-xs mt-1 font-medium">Home</span>
          <% end %>
          <%= link_to groups_path, class: mobile_nav_classes(groups_path) do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <span class="text-xs mt-1 font-medium">Groups</span>
          <% end %>
        </div>
      </nav>
    <% end %>
  </body>
</html>
