<div class="max-w-6xl mx-auto">
  <div class="mb-6">
    <%= link_to @group, class: "text-soundcloud-orange hover:text-soundcloud-coral inline-flex items-center font-semibold transition-colors" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to <%= @group.name %>
    <% end %>
  </div>

  <div class="flex items-center justify-between mb-8">
    <h1 class="text-4xl font-bold text-white">All Seasons</h1>
    <% if @group.memberships.find_by(user: current_user).admin? %>
      <%= link_to "Start New Season", new_group_season_path(@group), 
          class: "btn-primary" %>
    <% end %>
  </div>

  <% if @seasons.any? %>
    <div class="space-y-6">
      <% @seasons.each do |season| %>
        <%= link_to group_season_path(@group, season), class: "block group" do %>
          <div class="glass-card p-6 hover:shadow-glow-orange transition-all duration-300 transform hover:scale-105 hover:border-soundcloud-orange/30">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-3xl font-bold mb-2 text-white group-hover:text-soundcloud-orange transition-colors">Season <%= season.number %></h3>
                <p class="text-sm text-gray-400 font-medium">Started <%= season.start_date.strftime("%B %d, %Y") %></p>
              </div>
              <div class="text-right">
                <% if season.active %>
                  <span class="bg-gradient-to-r from-soundcloud-orange to-soundcloud-coral text-white px-4 py-2 rounded-full text-sm font-semibold shadow-glow-orange">
                    ‚ú® Active
                  </span>
                <% else %>
                  <span class="glass-subtle text-gray-400 px-4 py-2 rounded-full text-sm font-semibold">
                    Complete
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-20 glass-card">
      <div class="inline-block p-4 rounded-full bg-soundcloud-orange/10 mb-4">
        <span class="text-6xl">üèÜ</span>
      </div>
      <p class="text-gray-400 mb-8 text-xl">No seasons yet</p>
      <% if @group.memberships.find_by(user: current_user).admin? %>
        <%= link_to "Start First Season", new_group_season_path(@group), 
            class: "btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>
