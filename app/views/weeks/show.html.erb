<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to group_season_path(@group, @season), class: "text-soundcloud-orange hover:text-soundcloud-coral inline-flex items-center font-semibold transition-colors" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Season <%= @season.number %>
    <% end %>
  </div>

  <%# Week Header %>
  <div class="glass-card p-8 mb-6">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-4xl font-bold text-white">Week <%= @week.number %></h1>
      <% if @week.submission_phase? %>
        <span class="bg-gradient-to-r from-blue-500 to-blue-600 text-white px-5 py-2 rounded-full text-sm font-semibold shadow-lg inline-flex items-center">
          ğŸ“ Submissions Open
        </span>
      <% elsif @week.voting_phase? %>
        <span class="bg-gradient-to-r from-soundcloud-orange to-soundcloud-coral text-white px-5 py-2 rounded-full text-sm font-semibold shadow-glow-orange inline-flex items-center">
          ğŸ—³ï¸ Voting Open
        </span>
      <% else %>
        <span class="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-5 py-2 rounded-full text-sm font-semibold shadow-lg inline-flex items-center">
          ğŸ† Results
        </span>
      <% end %>
    </div>

    <div class="glass-medium border border-soundcloud-orange/30 rounded-2xl p-6 mb-6 bg-gradient-to-r from-soundcloud-orange/10 to-soundcloud-coral/10">
      <p class="text-sm text-soundcloud-coral font-semibold mb-2 uppercase tracking-wide">Category</p>
      <p class="text-3xl font-bold text-white"><%= @week.category %></p>
    </div>

    <div class="grid grid-cols-2 gap-6 text-sm">
      <div class="glass-subtle rounded-xl p-4">
        <p class="text-gray-400 mb-1">Submission Deadline</p>
        <p class="font-bold text-white text-lg"><%= @week.submission_deadline.strftime("%b %d, %I:%M %p") %></p>
      </div>
      <div class="glass-subtle rounded-xl p-4">
        <p class="text-gray-400 mb-1">Voting Deadline</p>
        <p class="font-bold text-white text-lg"><%= @week.voting_deadline.strftime("%b %d, %I:%M %p") %></p>
      </div>
    </div>

    <% if @group.memberships.find_by(user: current_user).admin? %>
      <div class="mt-6 pt-6 border-t border-white/10">
        <%= link_to "Edit Category", edit_group_season_week_path(@group, @season, @week), 
            class: "text-soundcloud-orange hover:text-soundcloud-coral text-sm font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>

  <%# Submission Phase %>
  <% if @week.submission_phase? %>
    <div class="glass-card p-8 mb-6">
      <h2 class="text-2xl font-bold mb-6 text-white">Submit Your Song</h2>
      
      <% if @user_submission %>
        <div class="glass-medium border border-green-500/30 rounded-2xl p-6 bg-green-500/10">
          <p class="text-green-400 font-bold mb-3 text-lg flex items-center">
            <span class="text-2xl mr-2">âœ“</span> You've submitted:
          </p>
          <p class="text-xl font-semibold text-white"><%= @user_submission.song_title %> - <%= @user_submission.artist %></p>
          <% if @user_submission.comment.present? %>
            <p class="text-sm text-gray-400 mt-3 italic"><%= @user_submission.comment %></p>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-400 mb-6 text-lg">
          â±ï¸ Time remaining: <%= distance_of_time_in_words(Time.current, @week.submission_deadline) %>
        </p>
        <%= link_to "Submit a Song", new_group_season_week_submission_path(@group, @season, @week), 
            class: "btn-primary" %>
      <% end %>
    </div>

    <div class="glass-card p-8 text-center">
      <p class="text-gray-400 text-lg">
        Submissions from other members will be visible after the submission deadline.
      </p>
    </div>
  <% end %>

  <%# Voting Phase %>
  <% if @week.voting_phase? %>
    <div class="space-y-6">
      <% if @user_submission %>
        <div class="glass-card p-6">
          <h2 class="text-2xl font-bold mb-4 text-white">Your Submission</h2>
          <div class="glass-medium rounded-xl p-4">
            <p class="text-xl font-bold mb-2 text-white"><%= @user_submission.song_title %></p>
            <p class="text-soundcloud-orange font-semibold mb-3"><%= @user_submission.artist %></p>
            <% if @user_submission.song_url.present? %>
              <%= link_to "ğŸ”— Listen", @user_submission.song_url, target: "_blank", 
                  class: "text-soundcloud-coral hover:text-soundcloud-orange text-sm font-semibold transition-colors" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="glass-card p-6">
        <h2 class="text-2xl font-bold mb-4 text-white">Vote on Submissions</h2>
        <p class="text-gray-400 mb-6 text-lg">
          â±ï¸ Time remaining: <%= distance_of_time_in_words(Time.current, @week.voting_deadline) %>
        </p>

        <% if @submissions_to_vote.any? %>
          <div class="space-y-6">
            <% @submissions_to_vote.each do |submission| %>
              <div class="glass-medium rounded-2xl p-6 border border-white/10 hover:border-soundcloud-orange/30 transition-all duration-300">
                <div class="mb-6">
                  <p class="text-xl font-bold mb-2 text-white"><%= submission.song_title %></p>
                  <p class="text-soundcloud-orange font-semibold mb-2"><%= submission.artist %></p>
                  <p class="text-sm text-gray-400 mb-3">by <%= submission.user.display_name %></p>
                  <% if submission.comment.present? %>
                    <p class="text-sm text-gray-300 italic glass-subtle p-4 rounded-xl">
                      "<%= submission.comment %>"
                    </p>
                  <% end %>
                  <% if (url = safe_external_url(submission.song_url)) %>
                      <%= link_to url,
                                  target: "_blank",
                                  rel: "noopener noreferrer",
                                  class: "inline-block text-soundcloud-coral hover:text-soundcloud-orange text-sm font-semibold mt-3 transition-colors" do %>
                        ğŸ”— Listen
                      <% end %>
                    <% end %>
                </div>

                <%= form_with url: submission_votes_path(submission), method: :post, class: "space-y-4" do |f| %>
                  <div>
                    <%= f.label :score, "Your Score (1-10)", class: "block text-sm font-bold mb-2 text-white" %>
                    <%= f.number_field :score, min: 1, max: 10, required: true,
                        class: "input-glass" %>
                  </div>
                  <div>
                    <%= f.label :comment, "Comment (optional)", class: "block text-sm font-bold mb-2 text-white" %>
                    <%= f.text_area :comment, rows: 2,
                        class: "input-glass", 
                        placeholder: "Share your thoughts..." %>
                  </div>
                  <%= f.submit "Submit Vote", class: "w-full btn-primary cursor-pointer" %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="glass-medium border border-green-500/30 rounded-2xl p-6 bg-green-500/10">
            <p class="text-green-400 text-center text-lg font-semibold">
              âœ“ You've voted on all submissions! Check back after the voting deadline for results.
            </p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Results Phase %>
  <% if @week.results_phase? %>
    <div class="space-y-6">
      <div class="glass-card p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-3xl font-bold text-white">ğŸ† Results</h2>
          <%= link_to "Full Leaderboard â†’", group_weekly_leaderboard_path(@group, week_id: @week.id), 
              class: "text-soundcloud-orange hover:text-soundcloud-coral text-sm font-semibold transition-colors" %>
        </div>

        <% if @submissions.any? %>
          <div class="space-y-6">
            <% @submissions.sort_by { |s| -(s.votes.average(:score) || 0) }.each_with_index do |submission, index| %>
              <div class="glass-medium rounded-2xl p-6 border <%= index == 0 ? 'border-soundcloud-orange shadow-glow-orange' : 'border-white/10' %> transition-all duration-300">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center mb-3">
                      <% if index == 0 %>
                        <span class="text-4xl mr-3">ğŸ†</span>
                      <% elsif index == 1 %>
                        <span class="text-4xl mr-3">ğŸ¥ˆ</span>
                      <% elsif index == 2 %>
                        <span class="text-4xl mr-3">ğŸ¥‰</span>
                      <% else %>
                        <span class="text-gray-500 font-bold mr-3 text-2xl">#<%= index + 1 %></span>
                      <% end %>
                      <div>
                        <p class="text-xl font-bold text-white"><%= submission.song_title %></p>
                        <p class="text-soundcloud-orange font-semibold"><%= submission.artist %></p>
                      </div>
                    </div>
                    <p class="text-sm text-gray-400 mb-3">by <%= submission.user.display_name %></p>
                    <% if submission.comment.present? %>
                      <p class="text-sm text-gray-300 italic glass-subtle p-4 rounded-xl mb-3">
                        "<%= submission.comment %>"
                      </p>
                    <% end %>
                    <% if (url = safe_external_url(submission.song_url)) %>
                      <%= link_to url,
                                  target: "_blank",
                                  rel: "noopener noreferrer",
                                  class: "inline-block text-soundcloud-coral hover:text-soundcloud-orange text-sm font-semibold transition-colors" do %>
                        ğŸ”— Listen
                      <% end %>
                    <% end %>
                  </div>
                  <div class="text-right ml-6">
                    <p class="text-5xl font-bold <%= winner_text_class(index) %>">
                      <%= (submission.votes.average(:score) || 0).round(2) %>
                    </p>
                    <p class="text-xs text-gray-400 mt-2 font-semibold">
                      <%= pluralize(submission.votes.count, "vote") %>
                    </p>
                  </div>
                </div>

                <%# Show votes/comments %>
                <% if submission.votes.any? %>
                  <div class="mt-6 pt-6 border-t border-white/10">
                    <p class="text-sm font-bold mb-3 text-gray-400 uppercase tracking-wide">Votes:</p>
                    <div class="space-y-3">
                      <% submission.votes.includes(:voter).each do |vote| %>
                        <div class="text-sm glass-subtle p-3 rounded-xl">
                          <span class="font-bold text-white"><%= vote.voter.display_name %>:</span>
                          <span class="text-soundcloud-orange font-bold"><%= vote.score %>/10</span>
                          <% if vote.comment.present? %>
                            <p class="text-gray-400 mt-2 italic">"<%= vote.comment %>"</p>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-400 text-center py-12 text-lg">No submissions for this week</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
